{% import 'common.yml.j2' as common %}

{%- block name -%}
# Template is at:    .github/templates/pull.yml.j2
# Generation script: .github/scripts/generate_ci_workflows.py
name: pull
{%- endblock %}

on:
  pull_request

concurrency:
  group: ci-pull-${{ github.event.pull_request.number || github.sha }}
  cancel-in-progress: true

jobs:
{% for job in jobs -%}
    {%- include job.template %}
{% endfor %}
